=show_for game do |u|
  %h3 Game Configuration
  = u.attribute :name
  = u.attribute :size
  = u.attribute :simulator_fullname, label: "Simulator"
  %h3 Simulator Configuration
  = render partial: 'configuration/parameter', collection: game.simulator_instance.configuration.to_a, locals: { u: u }
= link_to "Edit Game", edit_game_path(game.id), class: 'btn btn-primary'
= link_to "Copy Game", game_copy_path(game.id), class: 'btn btn-primary'
= link_to "Destroy Game", game, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger'
= link_to "Download JSON", url_for(action: "show", format: "json"), class: 'btn btn-primary'
= link_to "Download JSON with Aggregated Observations", url_for(action: "show", format: "json", granularity: 'observations'), class: 'btn btn-primary'
= link_to "Download JSON with Unaggregated Observations", url_for(action: "show", format: "json", granularity: 'full'), class: 'btn btn-primary'
= link_to "Download CV-Adjusted JSON", url_for(action: "show", format: "json", granularity: 'summary', adjusted: true), class: 'btn btn-primary'
= link_to "Download CV-Adjusted JSON with Aggregated Observations", url_for(action: "show", format: "json", granularity: 'observations', adjusted: true), class: 'btn btn-primary'
= link_to "Download CV-Adjusted JSON with Unaggregated Observations", url_for(action: "show", format: "json", granularity: 'full', adjusted: true), class: 'btn btn-primary'
