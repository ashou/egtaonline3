%tr
  %td= link_to game.name, game
  %td= link_to game.simulator_fullname, game.simulator
  %td.fixed= link_to game.size, game
  %td
    = link_to 'Edit', edit_game_path(game), class: 'btn btn-mini'
    = link_to 'Copy', game_copy_path(game), class: 'btn btn-mini'
    = link_to 'Destroy', game, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-mini btn-danger'
